%h3
  = link_to story.title, story_path(story)

.row-fluid
  .span8
    = markdown story.description

  .span4
    .actions
    %p
      %strong= t '.state'
      %div.label.label-info= story.human_state_name
    - if story.owner
      %p
        %strong= t '.assigned_to'
        %div.label= story.owner.email
    - if story.requester
      %p
        %strong= t '.requester'
        %div.label= story.requester.email
