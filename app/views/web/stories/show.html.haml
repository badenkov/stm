%h3
  = @story.title
  = link_to t(".edit"), edit_story_path(@story), class: "btn btn-mini btn-success"
  = link_to t(".delete"), story_path(@story), method: :delete, class: "btn btn-mini btn-danger",
                                                               confirm: t(".delete_confirm")
.row-fluid
  .span8
    = markdown @story.description

  .span4
    .actions
    %p
      %strong= t '.state'
      %div.label.label-info= @story.human_state_name
    - if @story.owner
      %p
        %strong= t '.assigned_to'
        %div.label= @story.owner.email
    - if @story.requester
      %p
        %strong= t '.requester'
        %div.label= @story.requester.email

  .span12
    = render 'comments'
