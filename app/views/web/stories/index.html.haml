%h2 Задачи

.row-fluid
  .span8
    = link_to new_story_path, class: 'btn btn-success' do
      %i.icon-ok
        Новая задача
    %p(style = "padding: 10px 0 0;")
      %strong Сортировка по:
      #{sort_link @q, 'title', 'Заголовку'},
      #{sort_link @q, 'state', 'Состоянию'},
      #{sort_link @q, 'owner', 'Исполнителю'},
      #{sort_link @q, 'requester', 'Запросившему'}

    - if @stories.any?
      %p
      - @stories.each do |story|
        = render partial: 'item', locals: { story: story }
        %hr
      = paginate @stories
    - else
      %p Not found

  .span4
    = render 'search_form'


